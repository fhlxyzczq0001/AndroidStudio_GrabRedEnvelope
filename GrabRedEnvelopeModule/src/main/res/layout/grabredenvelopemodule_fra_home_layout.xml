<?xml version="1.0" encoding="utf-8"?>
<!--首页红包fragment的布局-->
<LinearLayout
    android:id="@+id/parentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <include layout="@layout/common_customview_toolbar_layout"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/bg_home_red"
                  android:orientation="vertical"
                  android:weightSum="1">

        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="0.44"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="0.56"
                      android:gravity="center"
                      android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x100"
                android:layout_marginRight="@dimen/x100"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBtnRedPrice3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_red_price_3"/>

                <ImageView
                    android:id="@+id/imgBtnRedPrice7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_red_price_7"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyRedBottomParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x100"
                android:layout_marginRight="@dimen/x100"
                android:layout_marginTop="@dimen/x100"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBtnRedPrice10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_red_price_10"/>

                <ImageView
                    android:id="@+id/imgBtnRedPrice20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_red_price_20"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>