<?xml version="1.0" encoding="utf-8"?>
<!--登录界面的布局-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/common_customview_toolbar_layout"/>

    <LinearLayout android:id="@+id/lyParent"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <ImageView
            android:id="@+id/imgBtnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/x20"
            app:srcCompat="@drawable/drawable_svg_icon_close"/>
        <ImageView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x200"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x80"
            app:srcCompat="@mipmap/icon_launcher"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginTop="@dimen/x15"
                  android:text="收红包"
                  android:textColor="#333333"
                  android:textSize="@dimen/x36"/>

        <Button
            android:id="@+id/activityLogin_loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x200"
            android:background="@drawable/drawable_shape_white_bg_radius5"
            android:text="微信登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x35"/>
    </LinearLayout>
</LinearLayout>