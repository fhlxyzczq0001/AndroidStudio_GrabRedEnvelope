<?xml version="1.0" encoding="utf-8"?>
<!--通用dialog弹窗样式-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/drawable_shape_lingray_bg_radius5"
              android:orientation="vertical"
              android:paddingBottom="@dimen/x20">

    <LinearLayout
        android:id="@+id/lyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dip">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="#202020"
            android:textSize="@dimen/x26"
        />

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_shape_gray_bg_radius1"
            android:minLines="8"
            android:gravity="top|center_vertical"
            android:padding="10dp"
            android:textColor="#333333"
            android:textSize="@dimen/x28" >
        </EditText>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:gravity="center"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/tvBtnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#04FF81"
            android:gravity="center"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x25"
            android:paddingRight="@dimen/x25"
            android:paddingTop="@dimen/x5"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/x26"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvBtnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/drawable_shape_gray_bg_radius1"
            android:gravity="center"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x25"
            android:paddingRight="@dimen/x25"
            android:paddingTop="@dimen/x5"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="@dimen/x26"/>
    </LinearLayout>
</LinearLayout>